#!/bin/bash

source <(redis-hgetall "module/${MODULE_ID}/module.env")

cat > ${MODULE_STATE}/krb5.conf <<EOF
# generated by 15krb5conf
[libdefaults]
	default_realm = ${REALM^^}
	dns_lookup_realm = false
	dns_lookup_kdc = true

[realms]
${REALM^^} = {
	default_domain = ${REALM,,}
}

[domain_realm]
	${REALM,,} = ${REALM^^}
EOF
